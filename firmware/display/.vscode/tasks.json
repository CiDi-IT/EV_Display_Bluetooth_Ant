                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "make",
                "args": [
                    "clean"
                ]
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
          "label": "OpenOCD",
          "type": "shell",
          "args": [],
