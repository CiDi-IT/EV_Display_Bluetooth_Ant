        {
            "label": "build",
            "type": "shell",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "make"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
          "label": "build development",
          "type": "shell",
          "args": [],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "linux": {
              "command": "make for_development_only"
          },
          "problemMatcher": [],
          "group": {
              "kind": "build",
              "isDefault": true
          }
        },
        {
            "label": "clean",
            "type": "shell",
            "args": [],
